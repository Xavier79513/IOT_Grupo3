<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3F9"
    android:padding="24dp"
    android:gravity="center"
    android:backgroundTint="#F8F3F9">

    <!-- Título -->
    <TextView
        android:id="@+id/tvResultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultados"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <!-- Caja de estadísticas -->
    <LinearLayout
        android:id="@+id/boxEstadisticas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_results"
        android:elevation="4dp"
        android:layout_marginBottom="32dp">

        <!-- Correctas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#32CD32"
                android:background="@drawable/bg_circle" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Correctas"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvCorrectas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Incorrectas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FF4444"
                android:background="@drawable/bg_circle" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Incorrectas"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvIncorrectas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- No respondidas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#BBBBBB"
                android:background="@drawable/bg_circle" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="No respondidas"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvNoRespondidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botón volver -->
    <Button
        android:id="@+id/btnVolverAJugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↻ Volver a Jugar"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2A2ACB" />
</LinearLayout>
