<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo blanco -->
    <solid android:color="#FFFFFF" />

    <!-- Bordes redondeados -->
    <corners android:radius="16dp" />

    <!-- Sombra o borde tenue (puede simular elevación) -->
    <stroke
        android:width="1dp"
        android:color="#22000000" /> <!-- Gris clarito translúcido -->

    <!-- Opcional: padding interior -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
