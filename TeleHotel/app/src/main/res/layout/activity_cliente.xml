<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Barra superior -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?android:attr/colorPrimary"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvFindRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find room"
            android:textSize="18sp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

    <!-- TabLayout para seleccionar entre "Hotels" y "Villas" -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorColor="@android:color/black"
        app:tabTextColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvFindRoom"
        tools:ignore="NotSibling" />

    <!-- Contenedor de campos de búsqueda -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="56dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Campo de selección de lugar -->
            <TextView
                android:text="Where do you want"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter location"
                android:inputType="text" />

            <!-- Fecha de entrada -->
            <TextView
                android:text="Checkin date &amp; time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select date"
                android:inputType="datetime" />

            <!-- Fecha de salida -->
            <TextView
                android:text="Checkout d&amp;te &amp; time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select date"
                android:inputType="datetime" />

            <!-- Selección de adultos, niños y habitaciones -->
            <TextView
                android:text="0 Adults. 0 Children. 0 room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"
                android:layout_marginTop="8dp"/>

            <!-- Opciones de aire acondicionado o ventilador -->
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <RadioButton
                    android:id="@+id/rbFan"
                    android:text="Fan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rbAirConditioned"
                    android:text="Air conditioned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <!-- Botón de búsqueda -->
            <Button
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"/>

            <!-- Sección de "Best Places" -->
            <TextView
                android:text="Best Places"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Imagen de lugares -->
                    <ImageView
                        android:src="@drawable/ic_location"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                    <!-- Repite más ImageViews aquí para más lugares -->

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Sección de "Best Hotels" -->
            <TextView
                android:text="Best Hotels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Imagen de hoteles -->
                    <ImageView
                        android:src="@drawable/ic_hotel"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                    <!-- Repite más ImageViews aquí para más hoteles -->

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior de navegación -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
