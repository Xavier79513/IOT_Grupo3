<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="32dp">

        <!-- HEADER -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSecondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@color/colorSecondary"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_taxi"
                    android:layout_marginBottom="12dp"
                    app:tint="?attr/colorOnSecondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro de Taxista"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ãšnete como conductor profesional"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSecondary"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- FORM -->
        <androidx.cardview.widget.CardView
            android:id="@+id/formCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- SECCIÃ“N: DATOS PERSONALES -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Datos Personales"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <!-- Nombre -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombres"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="?attr/colorPrimary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:inputType="textPersonName|textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Apellido -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellidos"
                    android:layout_marginTop="16dp"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="?attr/colorPrimary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etApellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:inputType="textPersonName|textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- DNI -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DNI"
                    android:layout_marginTop="16dp"
                    app:startIconDrawable="@drawable/ic_documento"
                    app:startIconTint="?attr/colorPrimary"
                    app:helperText="8 dÃ­gitos"
                    app:helperTextTextColor="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="8"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Fecha de Nacimiento -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de nacimiento"
                    android:layout_marginTop="16dp"
                    app:startIconDrawable="@drawable/ic_fechanacimiento"
                    app:startIconTint="?attr/colorPrimary"
                    app:helperText="Debes ser mayor de 18 aÃ±os"
                    app:helperTextTextColor="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFechaNacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrÃ³nico"
                    android:layout_marginTop="16dp"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="?attr/colorPrimary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Telefono -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TelÃ©fono"
                    android:layout_marginTop="16dp"
                    app:startIconDrawable="@drawable/ic_telefono"
                    app:startIconTint="?attr/colorPrimary"
                    app:helperText="9 dÃ­gitos"
                    app:helperTextTextColor="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="9"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Domicilio -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Domicilio"
                    android:layout_marginTop="16dp"
                    app:startIconDrawable="@drawable/ic_direccioncasa"
                    app:startIconTint="?attr/colorPrimary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDomicilio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:inputType="textCapWords|textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- SEPARADOR -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="24dp"
                    android:background="?attr/colorOutlineVariant"
                    android:alpha="0.5" />

                <!-- SECCIÃ“N: DATOS DEL VEHÃCULO -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš— Datos del VehÃ­culo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorSecondary"
                    android:layout_marginBottom="16dp" />

                <!-- Placa del Auto -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Placa del Auto"
                    app:startIconTint="?attr/colorSecondary"
                    app:helperText="Formato: ABC-123 o ABC-1234"
                    app:helperTextTextColor="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPlacaAuto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:inputType="textCapCharacters"
                        android:maxLength="8" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- SEPARADOR -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="24dp"
                    android:background="?attr/colorOutlineVariant"
                    android:alpha="0.5" />

                <!-- SECCIÃ“N: FOTOGRAFÃAS -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¸ FotografÃ­as"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorTertiary"
                    android:layout_marginBottom="16dp" />

                <!-- Foto del Taxista -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto del Taxista"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/ivFotoTaxista"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person"
                            android:scaleType="centerCrop"
                            android:background="?attr/colorSurfaceVariant" />
                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSeleccionarFotoTaxista"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Seleccionar Foto"
                        app:icon="@drawable/ic_camera"
                        app:iconTint="?attr/colorOnSecondaryContainer"
                        app:backgroundTint="?attr/colorSecondaryContainer"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        app:cornerRadius="8dp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <!-- Foto del Auto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto del Auto"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/ivFotoAuto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_car"
                            android:scaleType="centerCrop"
                            android:background="?attr/colorSurfaceVariant" />
                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSeleccionarFotoAuto"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Seleccionar Foto del Auto"
                        app:icon="@drawable/ic_camera"
                        app:iconTint="?attr/colorOnSecondaryContainer"
                        app:backgroundTint="?attr/colorSecondaryContainer"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        app:cornerRadius="8dp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <!-- SEPARADOR -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="24dp"
                    android:background="?attr/colorOutlineVariant"
                    android:alpha="0.5" />

                <!-- SECCIÃ“N: SEGURIDAD -->
                <!--TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’ Seguridad"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorError"
                    android:layout_marginBottom="16dp" /-->

                <!-- Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ContraseÃ±a"
                    app:startIconDrawable="@drawable/ic_lock2"
                    app:endIconMode="password_toggle"
                    app:startIconTint="?attr/colorPrimary"
                    app:endIconTint="?attr/colorPrimary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Indicador de fortaleza -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seguridad:"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvPasswordStrength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DÃ©bil"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="?attr/colorError" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pbPasswordStrength"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="?attr/colorError" />

                <!-- Confirmar contraseÃ±a -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar contraseÃ±a"
                    android:layout_marginTop="16dp"
                    app:startIconDrawable="@drawable/ic_lock_check"
                    app:endIconMode="password_toggle"
                    app:startIconTint="?attr/colorPrimary"
                    app:endIconTint="?attr/colorPrimary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- TÃ©rminos y condiciones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Acepto los tÃ©rminos y condiciones para taxistas"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <!-- InformaciÃ³n adicional -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="?attr/colorSecondaryContainer">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â„¹ï¸ InformaciÃ³n importante"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Tu cuenta serÃ¡ revisada por el administrador\nâ€¢ RecibirÃ¡s una notificaciÃ³n cuando sea aprobada\nâ€¢ Las fotos son requeridas para completar el proceso"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:alpha="0.8" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- BotÃ³n de registro -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="Registrarse como Taxista"
                    android:textColor="?attr/colorOnSecondary"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_taxi"
                    app:iconTint="?attr/colorOnSecondary"
                    app:backgroundTint="?attr/colorSecondary"
                    android:enabled="false"
                    style="@style/Widget.Material3.Button" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Login Link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/formCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¿Ya tienes cuenta? "
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar SesiÃ³n"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>