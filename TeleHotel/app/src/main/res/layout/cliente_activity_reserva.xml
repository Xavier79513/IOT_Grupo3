<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.cliente.CercaActivity"
    android:background="#FFFFFF">

    <!-- Imagen principal del hotel -->
    <ImageView
        android:id="@+id/hotelImage"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/coast"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor de texto (nombre + ubicación) -->
    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/hotelImage"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/hotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heden Golf"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/hotelLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abidjan, Côte d'Ivoire"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="6dp"/>
    </LinearLayout>

    <!-- NUEVA SECCIÓN INSERTADA: Resumen de la reserva -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/hotelImage"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ROOM INFO -->
            <TextView
                android:text="ROOM INFO"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="No. of rooms: 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Room type: Air conditioned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Room: 3 Nights ($127 x 3 = $381)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Taxes: $25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Total: $406"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"/>

            <!-- GUEST INFO -->
            <TextView
                android:text="GUEST INFO"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Name: John Smith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Email: johnsmith@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Mobile number: +225 698698966"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- PROMO CODE -->
            <TextView
                android:text="PROMO CODE"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="Enter promo code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Confirm Order Button -->
            <Button
                android:id="@+id/btnConfirmOrder"
                android:text="Confirm order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:backgroundTint="#3F51B5"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Menú de navegación inferior (BottomNavigationView) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gradient"
        app:menu="@menu/cliente_bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

