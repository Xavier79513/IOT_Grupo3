<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#004D40"
        android:elevation="4dp"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Imagen principal del hotel -->
    <ImageView
        android:id="@+id/hotelImage"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/coast"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Overlay para mejorar legibilidad del texto -->
    <View
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintBottom_toBottomOf="@id/hotelImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor de texto del hotel -->
    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/hotelImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/hotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bristol Marriot Hotel Royale"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/hotelLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bristol, Inglaterra"
            android:textColor="#E0FFFFFF"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="6dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>
    </LinearLayout>

    <!-- Sección de reserva con ScrollView -->
    <ScrollView
        android:id="@+id/scrollViewReserva"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/hotelImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card de Detalles de Reserva -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título con icono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_hotel"
                            android:layout_marginEnd="8dp"
                            app:tint="#004D40" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Detalles de la Reserva"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#2E3A59" />
                    </LinearLayout>

                    <!-- Habitación -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_backgroud_light"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HABITACIÓN"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#6C757D"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvRoomType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Económica"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2E3A59"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/tvRoomDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Habitación con vista al mar"
                            android:textSize="14sp"
                            android:textColor="#6C757D"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Habitación "
                                android:textSize="14sp"
                                android:textColor="#6C757D" />

                            <TextView
                                android:id="@+id/tvRoomNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#004D40" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tvNumberRooms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 habitación"
                                android:textSize="14sp"
                                android:textColor="#6C757D" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Huéspedes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_backgroud_light"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_people"
                            android:layout_marginEnd="12dp"
                            app:tint="#004D40" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Huéspedes"
                            android:textSize="14sp"
                            android:textColor="#6C757D" />

                        <TextView
                            android:id="@+id/tvGuests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 adultos"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#2E3A59" />
                    </LinearLayout>

                    <!-- Estancia -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_backgroud_light"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ESTANCIA"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#6C757D"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_calendar"
                                android:layout_marginEnd="8dp"
                                app:tint="#004D40" />

                            <TextView
                                android:id="@+id/tvDays"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="3 noches"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#2E3A59" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_backgroud_light"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FECHAS DE ESTADÍA"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#6C757D"
                            android:layout_marginBottom="12dp" />

                        <!-- Check-in -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_calendar"
                                android:layout_marginEnd="10dp"
                                app:tint="#004D40" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check-in: "
                                android:textSize="14sp"
                                android:textColor="#6C757D" />

                            <TextView
                                android:id="@+id/tvCheckInDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="miércoles, 09 jul 2025"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#2E3A59" />
                        </LinearLayout>

                        <!-- Check-out -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_calendar"
                                android:layout_marginEnd="10dp"
                                app:tint="#004D40" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check-out: "
                                android:textSize="14sp"
                                android:textColor="#6C757D" />

                            <TextView
                                android:id="@+id/tvCheckOutDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="lunes, 14 jul 2025"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#2E3A59" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card de Resumen de Precios -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_dinero"
                            android:layout_marginEnd="8dp"
                            app:tint="#004D40" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Resumen de Precios"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#2E3A59" />
                    </LinearLayout>


                    <!-- Línea divisoria -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E9ECEF"
                        android:layout_marginVertical="12dp" />

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2E3A59" />

                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$406"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#004D40" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card de Información del Cliente -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person"
                            android:layout_marginEnd="8dp"
                            app:tint="#004D40" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Información del Huésped"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#2E3A59" />
                    </LinearLayout>

                    <!-- Información del cliente -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_backgroud_light"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_account"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="2dp"
                                app:tint="#6C757D" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nombre completo"
                                android:textSize="12sp"
                                android:textColor="#6C757D" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvNombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Smith Jackson"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2E3A59"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_email"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="2dp"
                                app:tint="#6C757D" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Correo electrónico"
                                android:textSize="12sp"
                                android:textColor="#6C757D" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="johnsmith@gmail.com"
                            android:textSize="14sp"
                            android:textColor="#2E3A59"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_telefono"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="2dp"
                                app:tint="#6C757D" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Teléfono móvil"
                                android:textSize="12sp"
                                android:textColor="#6C757D" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTelefono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+44 698698966"
                            android:textSize="14sp"
                            android:textColor="#2E3A59"
                            android:layout_marginStart="24dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botón de confirmación -->
            <Button
                android:id="@+id/btnConfirmOrder"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Confirmar Reserva"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#004D40"
                android:elevation="2dp"
                app:cornerRadius="28dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>