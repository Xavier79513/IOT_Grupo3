<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#004D40"
        android:elevation="4dp"
        app:title="Notificaciones"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.appcompat.widget.Toolbar>

    <!-- Contenido principal -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Filtros -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtros:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:id="@+id/chipGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chipAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todas"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:background="@drawable/chip_selected_background"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/chipReservations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservas"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:background="@drawable/chip_unselected_background"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/chipPayments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pagos"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:background="@drawable/chip_unselected_background"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/chipPromotions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ofertas"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:background="@drawable/chip_unselected_background"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

            <!-- Notificación de Pago -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Indicador de estado -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#4CAF50"
                        android:layout_marginEnd="12dp" />

                    <!-- Icono -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_dinero"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical" />

                    <!-- Contenido -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Pago procesado exitosamente"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hace 2 horas"
                                android:textSize="12sp"
                                android:textColor="#888888" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Se ha realizado el cobro de S/400.00 por tu reserva en Bristol Marriott Hotel Lima"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check-in: 15 Abr 2025"
                                android:textSize="12sp"
                                android:textColor="#2E7D32"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ver detalles"
                                android:textSize="12sp"
                                android:textColor="#1976D2"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Notificación de Confirmación -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Indicador de estado -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#FF9800"
                        android:layout_marginEnd="12dp" />

                    <!-- Icono -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_hotel"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical" />

                    <!-- Contenido -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Reserva confirmada"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 día"
                                android:textSize="12sp"
                                android:textColor="#888888" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tu reserva en Hotel Presidente ha sido confirmada. Código de reserva: #HP2025001"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20-22 Abr 2025"
                                android:textSize="12sp"
                                android:textColor="#FF9800"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ver voucher"
                                android:textSize="12sp"
                                android:textColor="#1976D2"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Notificación de Oferta -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Indicador de estado -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#E91E63"
                        android:layout_marginEnd="12dp" />

                    <!-- Icono -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_offer"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical" />

                    <!-- Contenido -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="¡Oferta especial disponible!"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 días"
                                android:textSize="12sp"
                                android:textColor="#888888" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Descuento del 30% en hoteles de playa. Válido hasta el 30 de abril. ¡No te lo pierdas!"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30% OFF"
                                android:textSize="12sp"
                                android:textColor="#E91E63"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ver ofertas"
                                android:textSize="12sp"
                                android:textColor="#1976D2"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Notificación de Recordatorio -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Indicador de estado (leída) -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#CCCCCC"
                        android:layout_marginEnd="12dp" />

                    <!-- Icono -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_hotel"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical" />

                    <!-- Contenido -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Recordatorio de check-in"
                                android:textSize="16sp"
                                android:textColor="#666666" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 semana"
                                android:textSize="12sp"
                                android:textColor="#888888" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tu check-in en Costa del Sol Hotel es mañana a las 3:00 PM. ¿Ya tienes todo listo?"
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Mensaje de estado vacío (oculto por defecto) -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <!--ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_notifications_none"
                    android:alpha="0.5"
                    android:layout_marginBottom="16dp" /-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay notificaciones"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Te mantendremos informado sobre tus reservas y ofertas especiales"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>