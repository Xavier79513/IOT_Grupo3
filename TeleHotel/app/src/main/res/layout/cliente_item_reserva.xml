<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="12dp"
    android:layout_marginVertical="4dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/imagenHotel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_hotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txtNombreHotel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre Hotel"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/imagenHotel"
        app:layout_constraintStart_toEndOf="@+id/imagenHotel"
        app:layout_constraintEnd_toStartOf="@+id/btnRepetir"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Booked on: 23 July 2019"
        android:textSize="13sp"
        android:textColor="#666"
        app:layout_constraintTop_toBottomOf="@id/txtNombreHotel"
        app:layout_constraintStart_toStartOf="@id/txtNombreHotel"
        app:layout_constraintEnd_toEndOf="@id/txtNombreHotel" />

    <TextView
        android:id="@+id/txtPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$127"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/txtNombreHotel"
        android:layout_marginBottom="4dp"/>

    <Button
        android:id="@+id/btnRepetir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book again"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#00D4A5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

