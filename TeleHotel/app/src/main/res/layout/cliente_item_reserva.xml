<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="18dp">

        <!-- Imagen del hotel -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/ivHotelImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel1"
                tools:src="@drawable/hotel1" />

        </androidx.cardview.widget.CardView>

        <!-- Información de la reserva -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Header con nombre del hotel -->
            <TextView
                android:id="@+id/tvHotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel Marriott Lima"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Fechas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="6dp"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/tvFechas"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="15 - 17 Abr 2025"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>
            <!-- Fechas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">


                <TextView
                    android:id="@+id/tvNoches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 noches"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Huéspedes y habitación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_person"
                    android:layout_marginEnd="6dp"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/tvHuespedes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="2 huéspedes"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:maxLines="1"
                    android:ellipsize="end" />


            </LinearLayout>
            <!-- Huéspedes y habitación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">


                <TextView
                    android:id="@+id/tvTipoHabitacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suite"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:maxLines="1" />

            </LinearLayout>

            <!-- Footer con precio -->
            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 480.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#004D40"
                android:layout_gravity="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>