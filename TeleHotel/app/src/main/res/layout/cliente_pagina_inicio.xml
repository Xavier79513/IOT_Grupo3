<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

    <include layout="@layout/encabezado" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card de búsqueda principal -->
            <androidx.cardview.widget.CardView
                android:id="@+id/searchCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título de búsqueda -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿A dónde quieres ir?"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryColor"
                        android:layout_marginBottom="16dp" />

                    <!-- Buscador de ciudad -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@drawable/ic_location"
                        app:startIconTint="@color/primaryColor">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Destino o ciudad"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Selector de fecha -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/dateSelector"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/gray"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="@color/primaryColor"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Seleccionar fechas"
                                android:textSize="16sp"
                                android:textColor="@color/gray" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/gray" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Selector de huéspedes -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/guestSelector"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/gray"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_people"
                                app:tint="@color/primaryColor"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:id="@+id/tvPeople"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1 habitación · 2 adultos · 0 niños"
                                android:textSize="16sp"
                                android:textColor="@color/gray" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/gray" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Botón de búsqueda -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSearch"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Buscar Hoteles"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_gradient"
                        app:cornerRadius="28dp"
                        app:rippleColor="@color/white"
                        android:elevation="4dp"
                        app:icon="@drawable/ic_search"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sección: Mejores Lugares -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_place"
                        app:tint="@color/primaryColor"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mejores Lugares"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerTodoLugares"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Ver todo"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:cornerRadius="18dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/primaryColor"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

            </LinearLayout>

            <!-- RecyclerView Lugares -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLugares"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="24dp"
                android:clipToPadding="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp" />

            <!-- Sección: Mejores Hoteles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_hotel"
                        app:tint="@color/primaryColor"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mejores Hoteles"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerTodoHoteles"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Ver todo"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:cornerRadius="18dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/primaryColor"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

            </LinearLayout>

            <!-- RecyclerView Hoteles -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHoteles"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="24dp"
                android:clipToPadding="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp" />

            <!-- Sección: Ofertas Especiales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_local_offer"
                        app:tint="@color/primaryColor"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ofertas Especiales"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerTodoOfertas"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Ver todo"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:cornerRadius="18dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/primaryColor"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

            </LinearLayout>

            <!-- RecyclerView Ofertas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOfertas"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>