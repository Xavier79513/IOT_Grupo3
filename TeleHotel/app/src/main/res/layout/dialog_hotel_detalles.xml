<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- HEADER DEL HOTEL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvNombreHotelDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Paradise"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvUbicacionHotelDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游늸 Lima, Per칰"
                android:textSize="14sp"
                android:textColor="?attr/colorOnPrimary"
                android:alpha="0.8"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvPeriodoDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游늰 01/01/2025 - 31/01/2025"
                android:textSize="12sp"
                android:textColor="?attr/colorOnPrimary"
                android:alpha="0.7" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- TABS -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutDetalles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="?attr/colorPrimary"
        app:tabTextColor="?attr/colorOnSurfaceVariant"
        app:tabIndicatorColor="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservas" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tendencias" />
    </com.google.android.material.tabs.TabLayout>

    <!-- CONTENT CONTAINER -->
    <ScrollView
        android:id="@+id/scrollViewContenido"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutDetalles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botonesAccion">

        <LinearLayout
            android:id="@+id/contenidoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TAB 1: RESUMEN -->
            <LinearLayout
                android:id="@+id/tabResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- ESTAD칈STICAS PRINCIPALES -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游늵 Estad칤sticas Principales"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginBottom="12dp" />

                        <!-- Grid de estad칤sticas -->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:rowCount="3">

                            <!-- Total Reservas -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/tvTotalReservasDetalle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="42"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorPrimary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Reservas"
                                    android:textSize="12sp"
                                    android:textColor="?attr/colorOnSurfaceVariant" />
                            </LinearLayout>

                            <!-- Total Ingresos -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/tvTotalIngresosDetalle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="S/ 12,450"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorSecondary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Ingresos"
                                    android:textSize="12sp"
                                    android:textColor="?attr/colorOnSurfaceVariant" />
                            </LinearLayout>

                            <!-- Promedio por Reserva -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/tvPromedioDetalle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="S/ 296"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorTertiary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Promedio/Reserva"
                                    android:textSize="12sp"
                                    android:textColor="?attr/colorOnSurfaceVariant" />
                            </LinearLayout>

                            <!-- Tasa de Ocupaci칩n -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/tvTasaOcupacion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90%"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/green_dark" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tasa Ocupaci칩n"
                                    android:textSize="12sp"
                                    android:textColor="?attr/colorOnSurfaceVariant" />
                            </LinearLayout>
                        </GridLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- INFORMACI칍N DEL HOTEL -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游낃 Informaci칩n del Hotel"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvDescripcionHotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hotel de lujo ubicado en el coraz칩n de Lima..."
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvServiciosHotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Servicios: WiFi, Piscina, Spa, Restaurante"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- TAB 2: LISTA DE RESERVAS -->
            <LinearLayout
                android:id="@+id/tabReservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewReservasDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:nestedScrollingEnabled="false" />

                <!-- Estado vac칤o para cuando no hay reservas -->
                <LinearLayout
                    android:id="@+id/emptyStateReservas"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游늶"
                        android:textSize="48sp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay reservas"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvMensajeEmptyReservas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay reservas en el rango de fechas seleccionado"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center"
                        android:alpha="0.7" />
                </LinearLayout>
            </LinearLayout>

            <!-- TAB 3: TENDENCIAS -->
            <LinearLayout
                android:id="@+id/tabTendencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游늳 Tendencias de Reservas"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginBottom="12dp" />

                        <!-- Placeholder para gr치fico -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="?attr/colorSurfaceVariant"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="游늵"
                                android:textSize="48sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gr치fico de tendencias"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(En desarrollo)"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:alpha="0.7" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- BOTONES DE ACCI칍N -->
    <LinearLayout
        android:id="@+id/botonesAccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar"
            android:textColor="?attr/colorOnSurface"
            app:backgroundTint="?attr/colorSurfaceVariant"
            style="@style/Widget.Material3.Button.TonalButton" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>