<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header de Bienvenida -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/primaryColor"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvBienvenida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Bienvenido Administrador!"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHotelNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Hotel Paradise"
                    android:textColor="#E0FFFFFF"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Configuración del Hotel -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🛠️ Configuración del Hotel"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="12dp" />

                <!-- Botón para configurar ubicación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_light"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📍 Ubicación y Lugares Cercanos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Configura la ubicación de tu hotel y los lugares históricos cercanos."
                        android:textSize="13sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnConfigurarUbicacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Configurar Ubicación"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/primaryColor"
                        android:textSize="14sp"
                        android:padding="10dp" />

                </LinearLayout>

                <!-- Botón para gestionar imágenes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_light"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📷 Galería del Hotel"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gestiona las fotos de tu hotel y sus instalaciones (mínimo 4 imágenes)."
                        android:textSize="13sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnGestionarImagenes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gestionar Imágenes"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/accentColor"
                        android:textSize="14sp"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_light"
                    android:padding="12dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📌 Lugares cercanos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Configura los lugares históricos cercanos al hotel."
                        android:textSize="13sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnConfigurarLugares"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Configurar Lugares"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/primaryColor"
                        android:textSize="14sp"
                        android:padding="10dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>