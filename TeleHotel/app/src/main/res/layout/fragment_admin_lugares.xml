<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con flecha para volver -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_lugares"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/primaryColor"
        app:title="Lugares Cercanos"
        app:titleTextColor="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Contenedor scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Card para agregar nuevo lugar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Agregar Nuevo Lugar"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginBottom="16dp"/>

                    <!-- Nombre del lugar -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNombreLugar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre del lugar"
                            android:inputType="textPersonName" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- DescripciÃ³n -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescripcionLugar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="DescripciÃ³n del lugar"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:gravity="top" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Distancia -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:suffixText="km">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDistanciaLugar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Distancia desde el hotel"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- BotÃ³n Agregar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAgregarLugar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Agregar Lugar"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/primaryColor"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_add"
                        app:iconGravity="textStart" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TÃ­tulo de la lista -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›ï¸ Lugares Agregados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="12dp"/>

            <!-- Contenedor donde se inflarÃ¡n los Ã­tems -->
            <LinearLayout
                android:id="@+id/containerLugares"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Mensaje cuando no hay lugares -->
            <LinearLayout
                android:id="@+id/emptyStateLugares"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—ºï¸"
                    android:textSize="48sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay lugares cercanos agregados"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agrega lugares de interÃ©s cerca de tu hotel"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>