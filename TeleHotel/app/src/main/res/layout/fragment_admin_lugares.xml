<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con flecha para volver -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_lugares"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/primaryColor"
        app:title="Lugares Cercanos"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Contenedor scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Nombre del lugar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del lugar"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/etNombreLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Museo de la ciudad"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp"/>

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etDescripcionLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Breve descripción del lugar"
                android:inputType="textMultiLine"
                android:lines="3"
                android:gravity="top"
                android:layout_marginBottom="24dp"/>

            <!-- Botón Agregar -->
            <Button
                android:id="@+id/btnAgregarLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Lugar"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@android:color/white"/>

            <!-- Separador y título de la lista -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugares Agregados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Contenedor donde se inflarán los ítems -->
            <LinearLayout
                android:id="@+id/containerLugares"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
