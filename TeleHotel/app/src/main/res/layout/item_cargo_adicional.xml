<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFF3E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Icono del cargo -->
        <!--ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add_charge"
            android:layout_marginEnd="12dp"
            app:tint="#FF9800" /-->

        <!-- Informaci칩n del cargo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvConcepto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Da침o en minibar"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Da침o en minibar" />

        </LinearLayout>

        <!-- Monto -->
        <TextView
            android:id="@+id/tvMonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 50.00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#E65100"
            android:layout_marginEnd="8dp"
            tools:text="S/ 50.00" />

        <!-- Bot칩n eliminar -->
        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:background="@drawable/btn_delete_background"
            android:contentDescription="Eliminar cargo"
            app:tint="@android:color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>