<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Título "Perfil" fuera del ScrollView -->
    <TextView
        android:id="@+id/greetingBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="10dp"
        android:text="Perfil"
        android:textColor="#6750A3"
        android:textSize="35sp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView con el contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/greetingBox"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:src="@drawable/foto_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background_perfil" />

                <ImageView
                    android:src="@drawable/camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <!-- Campos editables -->

            <!-- Nombre Completo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre Completo"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/person"
                        app:tint="#2196F3" />

                    <EditText
                        android:id="@+id/editNombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Martín Vizcarra"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <!-- Correo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/email"
                        app:tint="#2196F3" />

                    <EditText
                        android:id="@+id/editCorreo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="johnsmith@gmail.com"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <!-- Teléfono -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/phone"
                        app:tint="#2196F3" />

                    <EditText
                        android:id="@+id/editTelefono"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="+51 963068328"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <!-- Domicilio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Domicilio"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/home"
                        app:tint="#2196F3" />

                    <EditText
                        android:id="@+id/editDireccion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Av. Universitaria 1234"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <!-- Fecha de nacimiento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de nacimiento"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/calendario"
                        app:tint="#2196F3" />

                    <EditText
                        android:id="@+id/editFecha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="12/02/2002"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botones -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnGuardar"
                    android:text="Guardar cambios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white" />

                <Space android:layout_width="10dp" android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:text="Cancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/btn_gradient"
        app:menu="@menu/taxista_bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
