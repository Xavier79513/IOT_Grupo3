<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Greeting Box -->
    <TextView
        android:id="@+id/greetingBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Historial"
        android:textColor="#6750A3"
        android:textSize="36sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView con la lista -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/greetingBox"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:id="@+id/linearHotelContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="12dp"
                    android:padding="12dp"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:clipToPadding="false"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <!-- Foto del usuario -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/user1"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/rounded_circle"
                        android:clipToOutline="true" />

                    <!-- Contenedor de texto y botones -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <!-- Estado: Terminado -->
                        <TextView
                            android:id="@+id/textEstado2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancelado"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:background="#484B48"
                            android:layout_marginBottom="4dp" />

                        <!-- Nombre -->
                        <TextView
                            android:id="@+id/userName2"
                            android:text="Luisa Pérez Acevedo"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <!-- Rating -->
                        <TextView
                            android:id="@+id/textViewRating"
                            android:text="⭐ 4.98  Reviews (200)"
                            android:textSize="13sp"
                            android:textColor="#888888"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/textDestino"
                            android:text="Destino: 5 km - Aeropuerto Jorge Chávez"
                            android:textSize="13sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="#444"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/textRecojo2"
                            android:text="Recojo: Hotel Los Delfines"
                            android:textSize="13sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="#444"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="12dp"
                    android:padding="12dp"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:clipToPadding="false"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <!-- Foto del usuario -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/user2"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/rounded_circle"
                        android:clipToOutline="true" />

                    <!-- Contenedor de texto y botones -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <!-- Estado: Terminado -->
                        <TextView
                            android:id="@+id/textEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terminado"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:background="#30A034"
                            android:layout_marginBottom="4dp" />

                        <!-- Nombre -->

                        <!-- Rating -->
                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Luis Aster Acevedo"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewRating2"
                            android:text="⭐ 4.98  Reviews (200)"
                            android:textSize="13sp"
                            android:textColor="#888888"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/textDestino2"
                            android:text="Destino: 5 km - Aeropuerto Jorge Chávez"
                            android:textSize="13sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="#444"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/textRecojo"
                            android:text="Recojo: Hotel Los Delfines"
                            android:textSize="13sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="#444"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Menú inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gradient"
        app:menu="@menu/taxista_bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
