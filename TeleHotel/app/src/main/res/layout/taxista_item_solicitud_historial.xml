<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/card_background"
    android:clickable="true"
    android:clipToPadding="false"
    android:elevation="2dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Imagen del usuario -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_circle"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/user1" />

    <!-- Contenedor de textos -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Estado -->
        <TextView
            android:id="@+id/textEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"

            android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text="Terminado"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luisa Pérez Acevedo"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Rating -->
        <TextView
            android:id="@+id/textViewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="⭐ 4.98  Reviews (200)"
            android:textColor="#888888"
            android:textSize="13sp" />

        <!-- Destino -->
        <TextView
            android:id="@+id/textDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Destino: 5 km - Aeropuerto Jorge Chávez"
            android:textColor="#444"
            android:textSize="13sp" />

        <!-- Recojo -->
        <TextView
            android:id="@+id/textRecojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Recojo: Hotel Los Delfines"
            android:textColor="#444"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
