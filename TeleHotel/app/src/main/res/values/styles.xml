<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="LogoStyle">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:src">@drawable/ic_telehotel</item>
        <item name="android:contentDescription">Logo de TeleHotel</item>
    </style>

    <!-- Estilo para el TextView (APP NAME) -->
    <style name="AppNameTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para el ProgressBar -->
    <style name="ProgressBarStyle">
        <item name="android:indeterminate">true</item>
    </style>
</resources>