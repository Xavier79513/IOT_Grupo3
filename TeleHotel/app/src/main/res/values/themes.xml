<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TeleHotel" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Colores principales -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>

        <!-- Necesario para que funcione ?attr/colorBackground -->
        <item name="colorOnBackground">@color/black</item>

        <!-- Opcional -->
        <item name="android:statusBarColor">@color/backgroundColor</item>
    </style>
</resources>
