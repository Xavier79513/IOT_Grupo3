<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="match_parent">
    <EditText
        android:hint="Where do you want"
        android:drawableStart="@drawable/ic_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="Checkin date &amp; time"
        android:drawableStart="@drawable/ic_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false" />

    <EditText
        android:hint="Checkout date &amp; time"
        android:drawableStart="@drawable/ic_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false" />

    <EditText
        android:hint="0 Adults. 0 Children. 0 room"
        android:drawableStart="@drawable/ic_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false" />

    <!-- OpciÃ³n Fan / AC -->
    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_fan"
            android:text="Fan"  android:layout_height="1dp" android:layout_width="1dp"/>

        <RadioButton
            android:id="@+id/radio_ac"
            android:text="Air conditioned"
            android:checked="true"  android:layout_height="1dp" android:layout_width="1dp"/>
    </RadioGroup>
</LinearLayout>
